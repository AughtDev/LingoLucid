{
  "manifest_version": 3,
  "name": "Lingo Lucid",
  "version": "1.0",
  "description": "Language learning through contextual immersion on the web.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.substack.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.substack.com/*"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
